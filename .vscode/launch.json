{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run API",
            "cwd": "${workspaceFolder}/server",
            "program": "${workspaceFolder}/server/server.ts",
            // "preLaunchTask": "npm run build",
            "outFiles": [
                "${cwd}/dist/**/*.js",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "sourceMapPathOverrides": {
                "webpack://${workspaceFolderBasename}/*": "${workspaceFolder}/*"
            }
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "pathMappings": [
                {
                    "url": "webpack://kbd-visualizer-client/src",
                    "path": "${workspaceFolder}/client/src"
                }
            ]
        }
    ]
}