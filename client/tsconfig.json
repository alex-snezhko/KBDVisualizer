{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
